
.rect1 {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: #C5DFE8;
}
.rect2 {
  position: fixed;
  top: 30rpx;  
  left: 30rpx;  
  width: calc(100% - 60rpx);  
  height: calc(100vh - 60rpx);  
  border-radius: 30rpx;  
  background-color: #E5F1F5;
}

.textarea {
  width: 295px;
  width: 590rpx;  
  border: none;
  margin: 40rpx auto;
  background-color: white;
  border-radius: 30rpx;  
  padding-left: 10rpx;  
}



