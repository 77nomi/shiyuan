<view class="all">
  <view class="container">
    <view class="bottle">  
      <view class="ding"></view>
      <view class="chashou">
        <view wx:if="{{type2}}" class="dot2">.</view>
        <view class="neirong" bindtap="officialNotice">官方通知请查收</view>
      </view>
      <view class="pingjing"></view>
      <view class="pingshen">
        <!-- 求助部分 -->
        <view class="qiuzhu">
          <view class="wenzi">求助</view>
          <view class="two">
            <view wx:if="{{type0}}" class="dot">.</view>
            <view bindtap="seekHelpInfo" class="zuo" >
              <view class="tu"><image src="/images/lingdang2.png" mode="widthFix"/></view>
              <view class="tishi">求助信息</view>
            </view>
            <view bindtap="seekHelpRecord" class="you" >
              <view class="tu"><image src="/images/xinxi2.png" mode="widthFix"/></view>
              <view class="tishi">求助记录</view>
            </view>
          </view>
        </view>
        <!-- 帮助部分 -->
        <view class="bangzhu">
          <view class="wenzi">帮助</view>
          <view class="two">
            <view wx:if="{{type1}}" class="dot">.</view>
            <view bindtap="helpInfo" class="zuo" >
              <view class="tu"><image src="/images/lingdang2.png" mode="widthFix"/></view>
              <view class="tishi">帮助信息</view>
            </view>
            <view bindtap="helpRecord" class="you" >
              <view class="tu"><image src="/images/xinxi2.png" mode="widthFix"/></view>
              <view class="tishi" >帮助记录</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>