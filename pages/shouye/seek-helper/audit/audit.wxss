
.rect1 {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: #C5DFE8;
}
.rect2 {
  position: fixed;
  top: 20px;
  left: 20px;
  width: calc(100% - 40px);
  height: calc(100vh - 40px);
  border-radius: 20px;
  background-color: #E5F1F5;
}
.rect3 {
  position: fixed;
  top: 40px;
  left: 40px;
  width: calc(100% - 80px);
  height: calc(100vh - 80px);
  /* border-radius: 20px; */
  background-color: white;
}

 
